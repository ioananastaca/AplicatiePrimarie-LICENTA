@model List<Marriage>

@using (Html.BeginForm("ViewCasatorii", "Programari"))
{


    <table id="marriageTable" class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Id programare</th>
                <th>Id user</th>

                <th>Data</th>
                <th>Ora</th>
                <th>Sot</th>
                <th>CNP sot</th>
                <th>Sotie</th>
                <th>CNP sotie</th>
              
                <th>Email</th>
                <th>Telefon</th>
                <th>Anulata</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(x => x[i].Id)
                        @Html.HiddenFor(x => x[i].Id)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].UserId)
                        @Html.HiddenFor(x => x[i].UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].Date)
                        @Html.HiddenFor(x => x[i].Date)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].Hour)
                        @Html.HiddenFor(x => x[i].Hour)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].HusbandName)
                        @Html.HiddenFor(x => x[i].HusbandName)
                    </td>

                    <td>
                        @Html.DisplayFor(x => x[i].HusbandCNP)
                        @Html.HiddenFor(x => x[i].HusbandCNP)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].WifeName)
                        @Html.HiddenFor(x => x[i].WifeName)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].WifeCNP)
                        @Html.HiddenFor(x => x[i].WifeCNP)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].EmailAdress)
                        @Html.HiddenFor(x => x[i].EmailAdress)
                    </td>
                    <td>
                        @Html.DisplayFor(x => x[i].PhoneNumber)
                        @Html.HiddenFor(x => x[i].PhoneNumber)
                    </td>
                    <td>
                        @Html.CheckBoxFor(x => x[i].IsCanceled, new { @disabled = "disabled" })
                        @Html.HiddenFor(x => x[i].IsCanceled)
                    </td>
                    <td>
                        <input type="submit" class="show_alert" value="Sterge" show_alert="Esti sigur?" nextUrlAction="'@Url.Action("DeleteMarriage", "Programari",
        new { marriageId = @Model[i].Id })'" />
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script type="text/javascript">
        
        function show_alert() {
            debugger;
            jQuery('[show_alert]').click(function (e) {
                if (!confirm(jQuery(this).attr("show_alert"))) {
                    e.preventDefault();
                } else {
                    window.location.href = eval(jQuery(this).attr("nextUrlAction"));
                }
            });
        }
    </script>

}
