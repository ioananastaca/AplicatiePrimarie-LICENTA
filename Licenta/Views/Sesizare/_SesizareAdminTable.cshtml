@model List<Report>

@using (Html.BeginForm("ResolveReports", "Sesizare"))
{

<table id="reportTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>IdSesizare</th>
            <th>IdUser</th>
            <th>Titlu</th>
            <th>Telefon</th>
            <th>Descriere</th>
            <th>Urgenta</th>
            <th>Rezolvata</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
<tr>
    <td>
        @Html.DisplayFor(x => x[i].Id)
        @Html.HiddenFor(x => x[i].Id)
    </td>
    <td>
        @Html.DisplayFor(x => x[i].UserId)
        @Html.HiddenFor(x => x[i].UserId)
    </td>
    <td>
        @Html.DisplayFor(x => x[i].TitlulSesizarii)
        @Html.HiddenFor(x => x[i].TitlulSesizarii)
    </td>
    <td>
        @Html.DisplayFor(x => x[i].Adresa)
        @Html.HiddenFor(x => x[i].Adresa)
    </td>
    <td>
        @Html.DisplayFor(x => x[i].Descriere)
        @Html.HiddenFor(x => x[i].Descriere)
    </td>
    <td>
        @Html.CheckBoxFor(x => x[i].EsteUrgenta, new { @disabled = "disabled" })
        @Html.HiddenFor(x => x[i].EsteUrgenta)
    </td>

    <td>
        @Html.CheckBoxFor(x => x[i].IsResolved)
        @Html.HiddenFor(x => x[i].IsResolved)
    </td>
</tr>}
    </tbody>
</table>
                <button type="submit" class="btn ">Rezolva sesizarile selectate</button>
}


