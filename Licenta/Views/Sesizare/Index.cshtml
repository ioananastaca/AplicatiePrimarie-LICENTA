
@{
    ViewBag.Title = "Index";
}
@using Licenta.Models
@model Licenta.Models.Sesizare

<div class="header">
    <h2>Primăria comunei Bogdănești</h2>
    <hr id="line">
</div>

<h1 id="user">
    Secțiunea aceasta este dedicată îmbunătățirii tuturor aspectelor legate de comunitatea noastră.
</h1>

@if (AppSession.Instance().LoggedUser == null)
{
    <h1 style="color:black">Pentru a depune o sesizare este necesar sa fiți autentificat</h1>
    <h3 style="color:black">De asemenea, puteți depune o sesizare și la sediul primăriei în timpul programului</h3>
    <h5 id="red"> Programul este afișat în partea de jos a paginii</h5>
    <div style="text-align:center">
        <button class="btn">@Html.ActionLink("Autentificare", "Index", "Login")</button>
    </div>
}
else if (AppSession.Instance().LoggedUser.IsAdmin)
{
    @Html.Action("SesizareAdmin");
}
else
{
    @Html.Partial("_SesizareUser")
}

<style>
    #user {
        text-align: center;
        margin-left: 10px;
        margin-right: 10px;
        color: black;
        padding-bottom: 5px;
        border-bottom: 2px solid white;
    }
</style>


<link href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">


@section scripts{
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#reportTable').DataTable();
        });
    </script>

}